<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/portal_layout_comment_user" />

    <include layout="@layout/portal_layout_comment_text" />

    <include layout="@layout/portal_layout_comment_video" />

    <include layout="@layout/portal_layout_comment_divider" />

    <TextView
        android:id="@+id/commentCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F9F9F9"
        android:paddingStart="40dp"
        android:paddingTop="30dp"
        android:paddingEnd="40dp"
        android:text="0条回复"
        android:textColor="@color/public_text_main"
        android:textSize="30sp" />
</LinearLayout>