<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="40dp"
    android:paddingTop="30dp"
    android:paddingEnd="40dp"
    android:paddingBottom="23dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/userAvatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:riv_oval="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/userAvatar"
        android:layout_alignBottom="@id/userAvatar"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@id/userAvatar"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/userNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:maxWidth="400dp"
            android:text="我是大人1号"
            android:textColor="@color/public_text_main"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/userTag"
            android:layout_width="56dp"
            android:layout_height="28dp"
            android:layout_marginStart="6dp"
            android:src="@mipmap/portal_icon_comment_tag" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:gravity="center_vertical"
            android:text="·"
            android:textColor="@color/public_text_third"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/commentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:gravity="center_vertical"
            android:text="10天前"
            android:textColor="@color/public_text_third"
            android:textSize="24sp" />
    </LinearLayout>
</RelativeLayout>