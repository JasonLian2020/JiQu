<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shareLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/public_transparent_50">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/videoReplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/portal_icon_video_replay"
            android:drawablePadding="15dp"
            android:gravity="center"
            android:text="重播"
            android:textColor="@color/public_white"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/videoShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:drawableTop="@mipmap/portal_icon_video_share"
            android:drawablePadding="15dp"
            android:gravity="center"
            android:text="分享"
            android:textColor="@color/public_white"
            android:textSize="28sp" />
    </LinearLayout>
</FrameLayout>