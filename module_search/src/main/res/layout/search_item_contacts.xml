<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="141dp"
    android:paddingStart="30dp"
    android:paddingEnd="30dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/contactsAvatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="49dp"
        app:riv_oval="true" />

    <TextView
        android:id="@+id/contactsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="44dp"
        android:layout_toEndOf="@id/contactsAvatar"
        android:ellipsize="end"
        android:lines="1"
        android:text="我是大人1号"
        android:textColor="@color/public_text_main"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/contactsDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contactsName"
        android:layout_marginStart="14dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@id/contactsAvatar"
        android:ellipsize="end"
        android:lines="1"
        android:text="搞笑达人"
        android:textColor="@color/public_text_third"
        android:textSize="24sp" />
</RelativeLayout>