<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:paddingStart="40dp"
    android:paddingEnd="40dp">

    <LinearLayout
        android:id="@+id/bottomLikeLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/bottomLikeBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/home_icon_like_selector" />

        <TextView
            android:id="@+id/bottomLikeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="0"
            android:textColor="@color/home_text_feed_btn_selector"
            android:textSize="26sp" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/bottomDislikeLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/bottomDislikeBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/home_icon_dislike_selector" />

        <TextView
            android:id="@+id/bottomDislikeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="è¸©"
            android:textColor="@color/home_text_feed_btn_selector"
            android:textSize="26sp" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/bottomCommentLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/bottomCommentBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/home_icon_comment_normal" />

        <TextView
            android:id="@+id/bottomCommentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="0"
            android:textColor="#4C4C4C"
            android:textSize="26sp" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/bottomShareLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/bottomShareBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/home_icon_share_normal" />

        <TextView
            android:id="@+id/bottomShareText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="0"
            android:textColor="#4C4C4C"
            android:textSize="26sp" />
    </LinearLayout>
</LinearLayout>