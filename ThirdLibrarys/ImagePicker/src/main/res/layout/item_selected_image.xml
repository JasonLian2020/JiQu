<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/ip_preview_item_height_inside"
    android:layout_height="@dimen/ip_preview_item_height_inside"
    android:layout_marginStart="@dimen/ip_preview_item_padding"
    android:layout_marginTop="@dimen/ip_preview_item_padding"
    android:layout_marginBottom="@dimen/ip_preview_item_padding"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/seletedImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/selectMask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/preview_bg_image_selected" />
</FrameLayout>